#include <stdio.h>

 int main(){
    
 int Carta1 = 1;
 char Estado1 = 'A';
 char Código1[10] = "A01";
 char Cidade1[20] = "São Paulo";
 double População1= 12325000;
 float Área1 = 1521.11;
 float PIB1 = 699.28;
 int Número_de_Pontos_Turísticos1 = 50;


 int Carta2 = 2;
 char Estado2 = 'B';
 char Código2[10] = "B02";
 char Cidade2[20] = "Rio de Janeiro";
 float População2 = 6748000;
 float Área2 = 1200.25;
 float PIB2 = 300.50;
 int Número_de_Pontos_Turísticos2 = 30; 
 
 printf( " Carta %d\n", Carta1);
 printf( " Estado : %c\n", Estado1);
 printf( " Codigo : %s\n", Código1);
 printf( " Cidade: %s\n", Cidade1);
 printf( " População: %.lf\n", População1);
 printf( " Area: %.2f\n", Área1);
 printf( " PIB: %.2f\n", PIB1);
 printf( " Numero de pontos Turisticos: %d\n", Número_de_Pontos_Turísticos1);
 
 printf( " Carta %d\n", Carta2);
 printf( " Estado : %c\n", Estado2);
 printf( " Codigo : %s\n", Código2);
 printf( " Cidade: %s\n", Cidade2);
 printf( " População: %.lf\n", População2);
 printf( " Area: %.2f\n", Área2);
 printf( " PIB: %.2f\n", PIB2);
 printf( " Numero de pontos Turisticos: %d\n", Número_de_Pontos_Turísticos2);
 
 
 return 0;

 
 }
    
